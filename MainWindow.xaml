<Window x:Class="ProjectMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMediaPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="WindowLoaded" Closing="WindowClosing">
    <Canvas>
        <MediaElement x:Name="mediaElement" Canvas.Left="0" Canvas.Top="0" Height="450" Width="800" LoadedBehavior="Manual" MediaOpened="mediaElement_MediaOpened" MediaEnded="mediaElement_MediaEnded" />
        <Button x:Name="btnPlay" Content="Play" Canvas.Left="0" Canvas.Top="0" Width="75" Click="btnPlay_Click" />
        <Button x:Name="btnPause" Content="Pause" Canvas.Left="0" Canvas.Top="25" Width="75" Click="btnPause_Click" />
        <Button x:Name="btnStop" Content="Stop" Canvas.Left="0" Canvas.Top="50" Width="75" Click="btnStop_Click" />
        <Button x:Name="btnNext" Content="Next" Canvas.Left="80" Canvas.Top="0" Width="75" Click="btnNext_Click" />
        <Button x:Name="btnPrevious" Content="Previous" Canvas.Left="80" Canvas.Top="25" Width="75" Click="btnPrevious_Click" />
        <Button x:Name="btnShuffle" Content="Shuffle" Canvas.Left="80" Canvas.Top="50" Width="75" Click="btnShuffle_Click" />
        <Slider x:Name="sldVolume" Canvas.Left="170" Canvas.Top="25" Width="100" Minimum="0" Maximum="1" Value="{Binding ElementName=mediaElement, Path=Volume}" SmallChange="0.1"/>
        <Slider x:Name="slider" Canvas.Left="0" Canvas.Top="75" Width="700" ValueChanged="slider_ValueChanged" Maximum="100">
            <Slider.ToolTip>
                <ToolTip Content="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget.Value, StringFormat={}{0:0.00}}" />
            </Slider.ToolTip>
            <Slider.Template>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <ProgressBar Value="{TemplateBinding Value}" Maximum="{TemplateBinding Maximum}" Foreground="CadetBlue" Background="Transparent" />
                        <Track x:Name="PART_Track">
                            <Track.Thumb>
                                <Thumb Width="10" Height="10" />
                                <!-- Set the size of the Thumb here -->
                            </Track.Thumb>
                        </Track>
                        <Track x:Name="PART_ClickableTrack" IsHitTestVisible="True">
                            <Track.Thumb>
                                <Thumb Width="0" Height="0" />
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Slider.Template>
        </Slider>
        <TextBlock x:Name="txtName" Text="Name" FontSize="20" FontWeight="Bold" Canvas.Left="10" Canvas.Top="90" Width="700" TextAlignment="Center" />
        <TextBlock x:Name="txtSinger" Text="Singer" FontSize="15" FontStyle="Italic" Canvas.Left="10" Canvas.Top="117" Width="700" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <StackPanel Canvas.Left="0" Canvas.Top="150">
            <TextBlock Text="Play List" />
            <ListBox x:Name="listBox_PlayList"  Width="300" Height="200" SelectionChanged="listBoxPlayList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Canvas.Left="310" Canvas.Top="150">
            <TextBlock Text="Songs" />
            <ListBox x:Name="listBox_Songs"  Width="300" Height="200" SelectionChanged="listBoxSongs_SelectionChanged" >

            </ListBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Canvas.Left="0" Canvas.Top="375">
            <Button x:Name="bthAddPlayList" Content="Add PlayList" Canvas.Left="80" Canvas.Top="25" Width="75" Click="btnAddPlayList_Click" />
            <Button x:Name="bthAddSong" Content="Add Song" Canvas.Left="80" Canvas.Top="25" Width="75" Click="btnAddSong_Click" />
            <Button x:Name="bthRemovePlayList" Content="Remove PlayList" Canvas.Left="80" Canvas.Top="25" Width="100" Click="btnRemovePlayList_Click" />
            <Button x:Name="bthRemoveSong" Content="Remove Song" Canvas.Left="80" Canvas.Top="25" Width="100" Click="btnRemoveSong_Click" />
        </StackPanel>
    </Canvas>
</Window>
       